<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/url_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent"
    android:contentDescription="hf_no_number">

    <LinearLayout
        android:id="@+id/account_bg"
        android:layout_width="490dip"
        android:layout_height="330dip"
        android:layout_centerInParent="true"
        android:layout_marginEnd="0dp"
        android:background="#D5D5D5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#87CEEB"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/watt_logo_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/preview_img"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/test"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/preview_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preview"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/url_adress"
                        android:layout_width="450dp"
                        android:backgroundTint = "#FEC141"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="https://cdn.imweb.me/upload/S201807025b39d1981b0b0/5cac274d00b12.jpg"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/preview_show"
        android:layout_width="1px"
        android:layout_height="1px"
        android:text="@string/url_preview"/>

    <TextView
        android:id="@+id/img_opne"
        android:layout_width="1px"
        android:layout_height="1px"
        android:text="@string/url_open"/>

</RelativeLayout>